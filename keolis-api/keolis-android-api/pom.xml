<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>fr.dudie</groupId>
        <artifactId>keolis-api</artifactId>
        <version>0.1.0-SNAPSHOT</version>
        <relativePath>..</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <groupId>fr.dudie</groupId>
    <artifactId>keolis-android-api</artifactId>
    <packaging>jar</packaging>

    <name>Keolis Android API client</name>
    <description>POM facility to user keolis-android-api in an Android project</description>

    <build>
        <sourceDirectory>../keolis-java-api/src/main/java</sourceDirectory>
        <resources>
            <resource>
                <directory>../keolis-java-api/src/main/resources</directory>
            </resource>
            <resource>
                <directory>${basedir}</directory>
                <includes>
                    <include>LICENSE.keolis-android-api</include>
                    <include>NOTICE.keolis-android-api</include>
                    <include>README.keolis-android-api</include>
                </includes>
            </resource>
        </resources>
        <testSourceDirectory>../keolis-java-api/src/test/java</testSourceDirectory>
        <testResources>
            <testResource>
                <directory>../keolis-java-api/src/test/resources</directory>
            </testResource>
        </testResources>
    </build>

    <dependencies>
        <dependency>
            <groupId>com.google.android</groupId>
            <artifactId>android</artifactId>
            <version>2.3.3</version>
            <type>jar</type>
            <scope>provided</scope>
        </dependency>
    </dependencies>
</project>
